---
import Layout from "../layouts/Layout.astro";
import Playstore from "../images/playstore.svg";
import Appstore from "../images/appstore.svg";
import AboutImage from "../images/about.png";
import Features from "../images/features.png";
import Faq from "../components/Faq.astro";
import Contact from "../components/Contact.astro";
import Cta from "../components/Cta.astro";
---

<Layout title="Sharp">
  <section class="hero d-flex align-items-center" id="hero">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 d-flex flex-column justify-content-center">
          <h1 font-weight-bold="font-weight-bold" style="color:#fff">
            Secure &#38; Professional Services on the go.
          </h1>
          <h4 class="mb-2 mt-3" style="color:#fff">Download the Sharp app</h4>
          <div>
            <a
              href="https://apps.apple.com/gh/app/sharp-serpros/id1618687615"
              target="_blank"
            >
              <img src={Appstore} /></a
            ><a
              href="https://play.google.com/store/apps/details?id=com.donwudi.sharp_artisans&hl=en&gl=US"
              target="_blank"
              ><img src={Playstore} style="max-width: 150px" /></a
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <main id="main">
    <section class="about mycta" id="about">
      <div class="container">
        <div class="row gx-0 pt-4">
          <div class="col-lg-5 offset-lg-2">
            <h2>Earn extra cash as a Serpro</h2>
            <p style="color:#000">Sign up today</p>
          </div>
          <div class="col-lg-5">
            <div class="text-center text-lg-start">
              <a
                class="btn-read-more d-inline-flex align-items-center justify-content-center align-self-center"
                href="#"
                ><span>Sign up</span><i class="bi bi-arrow-right"></i></a
              >
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <section class="features" id="about" style="margin-top:-160px">
    <div class="container" data-aos="fade-up">
      <header class="section-header"></header>
      <div class="row feture-tabs" data-aos="fade-up">
        <div class="col-lg-7">
          <ul class="nav nav-pills mb-3">
            <li>
              <a class="nav-link active" data-bs-toggle="pill" href="#tab1"
                >Who we are</a
              >
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="tab1">
              <div class="d-flex align-items-center mb-2">
                <i class="bi bi-check2" style="color:#000"></i>
                <h4>What is Sharp!?</h4>
              </div>
              <p>
                Sharp! is an online platform that facilitates fast and
                convenient on-demand service transactions by connecting
                customers with local service professionals (Serpros) in need of
                mainly home and office services. It is designed to address the
                challenges faced by Customers in obtaining secure and reliable
                professionals. Sharp! offers the benefits of finding skilled,
                experienced and trusted individuals at optimum costs. Customers
                can choose from a variety of professions and services like
                construction-related services & repairs, gardening, cleaning,
                automobile and beauty-related services etc.
              </p>
              <div class="d-flex align-items-center mb-2">
                <i class="bi bi-check2" style="color:#000"></i>
                <h4>Who is behind Sharp!?</h4>
              </div>
              <p>
                Sharp! is a technological initiative of DonWudi Investment. Ing.
                Philip Lartey is the CEO/Founder of DonWudi Investment and has
                over 34 years of active working experience In the public sector.
                He has performed numerous senior roles in road engineering and
                finance areas. In the private sector, he has undertaken many
                consultancy assignments in the construction landscape. He is an
                astute entrepreneur with an eye for developing opportunities.
              </p>
            </div>
          </div>
        </div>
        <div class="col-lg-5 d-flex align-items-center">
          <img class="img-fluid" src={AboutImage} alt="" />
        </div>
      </div>
    </div>
  </section>

  <section class="features feature-bg" id="features">
    <div class="container" data-aos="fade-up">
      <header class="section-header">
        <h2 style="color:#fff">Features</h2>
      </header>
      <div class="row">
        <div class="col-lg-6">
          <img class="img-fluid" src={Features} alt="" />
        </div>
        <div class="col-lg-6 mt-5 mt-lg-0 d-flex mb-5">
          <div class="row align-self-center gy-4">
            <div class="col-md-6" data-aos="zoom-out" data-aos-delay="200">
              <div class="feature-box d-flex align-items-center">
                <i class="bi bi-check"></i>
                <h3>Have Your Work Done</h3>
              </div>
            </div>
            <div class="col-md-6" data-aos="zoom-out" data-aos-delay="300">
              <div class="feature-box d-flex align-items-center">
                <i class="bi bi-check"></i>
                <h3>Monitor Job Status & Provide Feedback</h3>
              </div>
            </div>
            <div class="col-md-6" data-aos="zoom-out" data-aos-delay="400">
              <div class="feature-box d-flex align-items-center">
                <i class="bi bi-check"></i>
                <h3>Request A Service Professional</h3>
              </div>
            </div>
            <div class="col-md-6" data-aos="zoom-out" data-aos-delay="500">
              <div class="feature-box d-flex align-items-center">
                <i class="bi bi-check"></i>
                <h3>Work With Verified Service Professionals</h3>
              </div>
            </div>
            <div class="col-md-6" data-aos="zoom-out" data-aos-delay="600">
              <div class="feature-box d-flex align-items-center">
                <i class="bi bi-check"></i>
                <h3>Wide Range Of Service Professionals</h3>
              </div>
            </div>
            <div class="col-md-6" data-aos="zoom-out" data-aos-delay="700">
              <div class="feature-box d-flex align-items-center">
                <i class="bi bi-check"></i>
                <h3>Quick Signup With Phone Number & OTP</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Faq />
  <Cta />
  <Contact />
</Layout>
